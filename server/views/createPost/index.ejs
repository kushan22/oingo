<body>

    <div class="container">
        <h1> New Post</h1>
        <div class="jumbotron">

        <div class="container">
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control rounded-0" id="description" rows="3"></textarea>
                <label for="tag">Tag</label>
                <textarea class="form-control rounded-0" id="tag" rows="1"></textarea>
            </div>

            <div>
                <div class="d-inline">
                    <label for="location">Location</label>
                    <input type="text" id="location" rows="1">
                </div>
                <div class="d-inline">
                    <label for="radius">Radius</label>
                    <input type="text" id="radius" rows="1">
                </div>
            </div>
