            <!--Schedule div-->
            <div class="form-group">
                Schedule
                <div class="d-inline">
                    <select name="Schedule1" id="Schedule1">
                        <option value="1">For 24 Hours</option>
                        <option value="2">Specific Date</option>
                        <option value="3">Recurring</option>
                    </select>
                </div>
                <div class="d-inline " id="Sch2" style="visibility:hidden;">
                    <select id="Schedule2" name="Schedule2">
                        <option value="1">Weekly</option>
                        <option value="2">Biweekly</option>
                        <option value="3">Monthly</option>
                        <option value="4">Upto a specific date</option>
                    </select>

                </div>
                <div class="d-inline">
                    <select name="Week" id="Week" style="visibility:hidden">
                        <option value="1">Monday</option>
                        <option value="2">Tuesday</option>
                        <option value="3">Wednesday</option>
                        <option value="4">Thursday</option>
                        <option value="5">Friday</option>
                        <option value="6">Saturday</option>
                        <option value="7">Sunday</option>
                    </select>

                </div>


            </div>
            <div class="d-inline" style="float:left;visibility:hidden" id="dp1">
                <p>Date From: <input type="text" id="datepicker"></p>
                <p>Date To: <input type="text" id="datepicker2"></p>
                <p>Time From:<input id="timepicker5" type="text" class="input-small">
                <p>Time To:<input id="timepicker6" type="text" class="input-small">
            </div>
        </div>
