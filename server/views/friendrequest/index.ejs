<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
        crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/stylefriend.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans|Roboto+Slab' rel='stylesheet' type='text/css'>

</head>

<body>

    <br />
    <a href="/home" class="button js-button"> <span class="entypo-left"></span> Go Back</a>
    <br />
    <br />


    <div class="col-sm-3">
        <div class="container">
            <div class="panel panel-default panel-custom">

                <div class="panel-heading">
                   
                    <h3 class="panel-title">
                        Friend Requests Pending

                    </h3>
                </div>
                <div class="panel-body">




                    <% for (var i=0;i<friends.length; i++){ %>

                    <h4 class="media-heading">
                        <%= frname[i] %>
                    </h4>
                    <form method="post" action="/home/friendrequest" id="fr">
                        <input type="submit" value="Accept Request">
                        <input name="friendId" id="friendHelper" type="text" value="<%= friends[i]%>" hidden />
                    </form>
                    <br />



                    <%  } %>




                </div>

            </div>
        </div>
    </div>
</body>

</html>